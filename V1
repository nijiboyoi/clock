<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            background-color: green; /* ページの背景色をグリーンに設定 */
        }

        .clock {
            width: 200px;
            height: 200px;
            border: 5px solid black;
            border-radius: 100%;
            position: relative;
            background-color: green; /* 背景色をグリーンに設定 */
        }

        .hour-hand, .minute-hand, .second-hand {
            position: absolute;
            transform-origin: center bottom;
        }

        .hour-hand {
            width: 2px;
            height: 90px;
            background-color: black;
            top: 0px; /* 中心からの位置調整 */
            left: 99px;
        }

        .minute-hand {
            width: 2px;
            height: 90px;
            background-color: rgb(0, 0, 255);
            top: 0px; /* 中心からの位置調整 */
            left: 99px;
        }

        .second-hand {
            width: 1px;
            height: 90px;
            background-color: red;
            top: 0px; /* 中心からの位置調整 */
            left: 99px;
        }
    </style>
</head>
<body>
    <div class="clock">
        <div class="hour-hand" id="hour-hand"></div>
        <div class="minute-hand" id="minute-hand"></div>
        <div class="second-hand" id="second-hand"></div>
    </div>

    <script>
        function updateClock() {
            const now = new Date();
            const totalMinutes = (now.getHours() % 12) * 60 + now.getMinutes();
            const hourDeg = (totalMinutes / (12 * 60)) * 360;
            const minuteDeg = (now.getMinutes() + now.getSeconds() / 60) * 360 / 60;
            const secondDeg = (now.getSeconds()) * 360 / 60;

            document.getElementById('hour-hand').style.transform = `rotate(${hourDeg}deg)`;
            document.getElementById('minute-hand').style.transform = `rotate(${minuteDeg}deg)`;
            document.getElementById('second-hand').style.transform = `rotate(${secondDeg}deg)`;
        }

        setInterval(updateClock, 1000);
        updateClock();
    </script>
</body>
</html>
